<%= form_for([@brewery, @brew]) do |f| %>
    <fieldset>
      <legend>Edit Recipe Details</legend>
      <ol>
        <li>
          <%= f.label :name %>
          <%= f.text_field :name %>
        </li>
        <li>
          <%= f.label :brewer %>
          <%= f.text_field :brewer %>
        </li>
        <li>
          <%= f.label :original_gravity %>
          <%= f.text_field :original_gravity %>
        </li>
        <li>
          <%= f.label :final_gravity %>
          <%= f.text_field :final_gravity %>
        </li>
        <li>
          <%= f.label :fermentation_volume_litres %>
          <%= f.text_field :fermentation_volume_litres %>
        </li>
        <li>
          <%= f.label :mash_temperature_celsius %>
          <%= f.text_field :mash_temperature_celsius %>
        </li>
        <li>
          <%= f.label :boil_time_minutes %>
          <%= f.text_field :boil_time_minutes %>
        </li>
        <li>
          <%= f.label :notes %>
          <%= f.text_area :notes, :size => "15x10" %>
        </li>
        <li class="submit">
          <%= f.submit %>
        </li>
      </ol>
    </fieldset>
<% end %>
