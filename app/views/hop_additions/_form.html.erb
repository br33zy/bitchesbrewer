<%= form_for([@brewery, @brew, @brew.hop_additions.build]) do |f| %>
    <fieldset>
    <legend>Make a new Hop Addition</legend>
      <ol>
        <li>
          <%= f.label :name %>
          <%= f.text_field :name, :size => 17 %>
        </li>
        <li>
          <%= f.label :alpha_acid_percentage %>
          <%= f.text_field :alpha_acid_percentage, :size => 17 %>
        </li>
        <li>
          <%= f.label :weight_grams %>
          <%= f.text_field :weight_grams, :size => 17 %>
        </li>
        <li>
          <%= f.label :boil_time_minutes %>
          <%= f.text_field :boil_time_minutes, :size => 17 %>
        </li>
        <li class="submit">
          <%= f.submit %>
        </li>
      </ol>
    </fieldset>
<% end %>
