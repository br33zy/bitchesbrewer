<%= form_for([@brewery, @brew, @brew.brew_sheets.build]) do |f| %>
  <div class="field">
    <%= f.label :name %><br />
    <%= f.text_field :name %>
  </div>
  <div class="field">
    <%= f.label :brewer %><br />
    <%= f.text_field :brewer %>
  </div>
  <div class="field">
    <%= f.label :brew_date %><br />
    <%= f.datetime_select :brew_date %>
  </div>
  <div class="field">
    <%= f.label :brew_notes %><br />
    <%= f.text_area :brew_notes %>
  </div>
  <div class="field">
    <%= f.label :mash_temperature_celsius %><br />
    <%= f.text_field :mash_temperature_celsius %>
  </div>
  <div class="field">
    <%= f.label :pitching_temperature_celsius %><br />
    <%= f.text_field :pitching_temperature_celsius %>
  </div>
  <div class="field">
    <%= f.label :original_gravity %><br />
    <%= f.text_field :original_gravity %>
  </div>
  <div class="field">
    <%= f.label :final_gravity %><br />
    <%= f.text_field :final_gravity %>
  </div>
  <div class="field">
    <%= f.label :fermentation_volume_litres %><br />
    <%= f.text_field :fermentation_volume_litres %>
  </div>
  <div class="field">
    <%= f.label :boil_time_minutes %><br />
    <%= f.text_field :boil_time_minutes %>
  </div>
  <div class="field">
    <%= f.label :achieved_efficiency_percentage %><br />
    <%= f.text_field :achieved_efficiency_percentage %>
  </div>
  <div class="field">
    <%= f.label :brew %><br />
    <%= f.text_field :brew %>
  </div>
  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>
