<%= form_for([@brewery, @brew, @fermentable]) do |f| %>
    <fieldset>
      <legend>Edit Fermentable Details</legend>
      <ol>
        <li>
          <%= f.label :mash %>
          <%= f.check_box :mash %>
        </li>
        <li>
          <%= f.label :name %>
          <%= f.text_field :name %>
        </li>
        <li>
          <%= f.label :points_per_kg_per_litre %>
          <%= f.text_field :points_per_kg_per_litre %>
        </li>
        <li>
          <%= f.label :weight_in_kg %>
          <%= f.text_field :weight_in_kg %>
        </li>
        <li class="submit">
          <%= f.submit %>
        </li>
      </ol>
    </fieldset>
<% end %>
